<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PracticumAndroidDiploma" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>

        <item name="colorPrimaryFixed">@color/blue</item>
        <item name="colorOnPrimaryFixed">@color/white</item>

        <item name="colorSecondary">@color/grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>

        <item name="android:windowBackground">@color/black</item>

        <item name="colorAccent">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>


        <!-- Дополнительные цветовые темы певрый цвет в название для светлой темы второй для темной-->
        <item name="colorLightGreyGrey">@color/grey</item>
        <item name="colorGreyWhite">@color/white</item>
        <item name="colorbottomNavMenuActive">@color/blue</item>
        <item name="colorbottomNavMenuNotActive">@color/grey</item>
        <item name="colorbottomNavDivider">@color/grey</item>
        <item name="colorbottomNavBack">@color/black</item>
    </style>

    <style name="Theme.PracticumAndroidDiploma"
        parent="Base.Theme.PracticumAndroidDiploma" />
</resources>
