    <style name="Base.Theme.PracticumAndroidDiploma" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>

        <item name="colorPrimaryFixed">@color/blue</item>
        <item name="colorOnPrimaryFixed">@color/white</item>

        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorOnSecondary">@color/grey</item>
