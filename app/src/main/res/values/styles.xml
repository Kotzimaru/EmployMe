<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="YSRegular16">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorGreyWhite</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="YSMedium19">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_19</item>
    </style>

    <style name="YSMedium22">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>


    <style name="YSMedium26">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_26</item>
    </style>


    <style name="rounded_12">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/margin_12</item>
    </style>

    <style name="Text_Header">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Text_Standard">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Text_Standard_12">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SubHeaderStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="ItemHeaderStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="FilterButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="FilterBlueButtonStyle" parent="FilterButtonStyle">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/blue</item>
    </style>
    <style name="FilterBackImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/button_back_height</item>
        <item name="android:layout_height">@dimen/button_back_height</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="tint">?android:attr/textColorPrimary</item>
        <item name="android:src">@drawable/baseline_arrow_back_24</item>
    </style>

    <style name="FilterTopBarTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="BottomNavigation">
        <item name="android:background">@color/bottom_nav_back</item>
        <item name="itemBackground">?attr/bottomNavigationViewBackground</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>
    <attr name="bottomNavigationViewBackground" format="color" />

    <style name="FilterCheckboxStyle">
        <item name="buttonTint">@color/blue</item>
    </style>
</resources>
